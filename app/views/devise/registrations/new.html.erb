<style>
  .block{
    width: 25%;
  }
</style>
<br>

<center>
  <div class="block">
    <h2 class="form-signin-heading">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin") do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :first, :placeholder => "First Name", :class => "form-control" %>
      </div>
      <div class="field">
        <%= f.text_field :last, :placeholder => "Last Name", :class => "form-control"%>
      </div>
      

      <div class="field">
        <%= f.text_field :adress, :placeholder => "Address", :class => "form-control"%>
      </div>
      <%= render(:partial => 'statecity', :locals => {:f => f}) %>
      <div class="field">
        <%= f.text_field :phone, :placeholder => "Phone Number", :class => "form-control"%>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "form-control" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Password (" + @minimum_password_length.to_s + " charecters minimum)", :class => "form-control" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password", :class => "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class=>"btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</center>